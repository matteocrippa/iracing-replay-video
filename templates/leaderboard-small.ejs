<html>
<head>
  <style>
    .number{
      background-color: white;
      color: black;
      border-radius: 5px;
      -moz-border-radius: 5px;
      padding: 5px;
      width: 18px;
      text-align: center;
    }

    .round-corners-10px{
      -webkit-border-radius: 10px;
      -moz-border-radius: 10px;
      border-radius: 10px;
    }
    .unround-left-corners{
      -webkit-border-top-left-radius: 0px;
      -webkit-border-bottom-left-radius: 0px;
      -moz-border-radius-topleft: 0px;
      -moz-border-radius-bottomleft: 0px;
      border-top-left-radius: 0px;
      border-bottom-left-radius: 0px;
    }

    .box {
      background: rgba(0, 0, 0, 0.8);
      left: 24px;
      position: absolute;
      top: 84px;
      color: white;
    }
    .inner {
      margin: 12px;
    }
    table {
      margin-top: 8px;
      border-spacing: 10px;
      border-collapse: separate;
    }
    tr {
      font-size: 18px;
      text-transform: uppercase;
      color: white;
    }

    .fastestlap {
      background: mediumpurple;
    }
    .current {
      background: deepskyblue;
    }
  </style>
</head>
<body>
<div class="box round-corners-10px unround-left-corners">
  <div class="inner">
    <% if (standings.lap) { %>
    <h2><%= standings.lap %></h2>
    <% } %>
    <table>
      <% Object.keys(standings.order).forEach(function(k) { %>
      <% var item = standings.order[k]; %>
      <tr>
        <td class="number"><%= (parseInt(k)+1) %></td>
        <td style="background: <%= item.driver.color %>; border: 1px solid white;">&nbsp;</td>
        <td class="<% if (item.isFastestLap) { %>fastestlap <% } %> <% if (item.isOnCamera) { %>current <% } %>"><%= item.driver.surname %> <% if (item.isOnCamera) { %> ðŸŽ¥<%}%></td>
        <td><% if (item.pit > 0) { %>(<%= item.pit %>)<% } %></td>
      </tr>
      <% }); %>
    </table>

  </div>
</div>
</body>
</html>